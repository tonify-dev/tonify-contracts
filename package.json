{
    "name": "go-derivatives-ton",
    "version": "0.0.1",
    "scripts": {
        "start": "blueprint run",
        "build": "blueprint build",
        "build-market": "blueprint build Market 1>/dev/null && blueprint build Deal 1>/dev/null",
        "build-oracle": "blueprint build CheckTactOracle 1>/dev/null",
        "build-factory": "blueprint build Factory 1>/dev/null && npm run build-market",
        "build-amm": "blueprint build Amm 1>/dev/null && npm run build-market",
        "build-nft": "blueprint build NftItem 1>/dev/null",
        "test": "jest --verbose",
        "test-oracle": "npm run build-oracle && jest ./tests/SingleFeedMan.spec.ts --verbose",
        "test-market": "npm run build-market && jest ./tests/Market.spec.ts --verbose",
        "test-market-integration": "npm run build-market && jest ./tests/MarketIntegration.spec.ts --verbose",
        "test-factory": "npm run build-factory && jest ./tests/Factory.spec.ts --verbose",
        "test-amm": "npm run build-amm && jest ./tests/Amm.spec.ts --verbose",
        "test-amm-integration": "npm run build-amm && jest ./tests/AmmIntegration.spec.ts --verbose",
        "test-nft": "npm run build-nft && jest ./tests/NftItem.spec.ts --verbose"
    },
    "devDependencies": {
        "@orbs-network/ton-access": "^2.3.3",
        "@redstone-finance/protocol": "0.6.1",
        "@redstone-finance/sdk": "0.6.1",
        "@redstone-finance/utils": "0.6.1",
        "@ton-community/func-js": "0.6.3",
        "@ton-community/func-js-bin": "^0.4.5-tvmbeta.3",
        "@ton/blueprint": "^0.24.0",
        "@ton/sandbox": "^0.20.0",
        "@ton/test-utils": "^0.4.2",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.14.10",
        "jest": "^29.7.0",
        "prettier": "^3.3.2",
        "@ton/ton": "^15.0.0",
        "@ton/core": "~0",
        "@ton/crypto": "^3.2.0",
        "ts-jest": "^29.2.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.3"
    }
}
